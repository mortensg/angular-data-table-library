{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "angular-data-table-library": {
      "projectType": "library",
      "root": "",
      "sourceRoot": "src",
      "prefix": "bugis",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "project": "tsconfig.lib.json",
            "assets": [
              {
                "glob": "**/*",
                "input": "src/assets",
                "output": "/assets"
              }
            ],
            "styles": [
              "src/styles.css"
            ]
          },
          "configurations": {
            "production": {
              "project": "tsconfig.lib.prod.json"
            }
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "src/test.ts",
            "polyfills": "src/polyfills.ts",
            "tsConfig": "tsconfig.spec.json",
            "assets": [
              {
                "glob": "**/*",
                "input": "src/assets",
                "output": "/assets"
              }
            ],
            "styles": [
              "src/styles.scss"
            ],
            "scripts": []
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "tsconfig.lib.json",
              "tsconfig.spec.json"
            ],
            "exclude": [
              "**/*.spec.ts",
              "**/*.d.ts"
            ]
          }
        }
      }
    },
    "storybook": {
      "projectType": "library",
      "root": "",
      "sourceRoot": "src",
      "prefix": "bugis",
      "architect": {
        "build-storybook": {
          "builder": "@storybook/angular:build-storybook",
          "options": {
            "outputDir": "storybook-static",
            "configDir": ".storybook"
          }
        },
        "storybook": {
          "builder": "@storybook/angular:start-storybook",
          "options": {
            "port": 6006,
            "configDir": ".storybook"
          }
        }
      }
    }
  },
  "cli": {
    "defaultCollection": "@angular/angular"
  },
  "schematics": {
    "@angular/angular:application": {
      "inlineStyle": false,
      "inlineTemplate": false,
      "viewEncapsulation": "Emulated",
      "routing": true,
      "style": "css"
    },
    "@angular/angular:library": {
      "inlineStyle": false,
      "inlineTemplate": false,
      "viewEncapsulation": "Emulated",
      "skipTests": false
    }
  }
}